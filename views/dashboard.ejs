<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Instagram Messaging - Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>
<body class="bg-light">
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">
                <i class="fab fa-instagram"></i>
                Instagram Messaging
            </a>
            <div class="navbar-nav ms-auto">
                <div class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                        <% if (user && user.profile_pic_url) { %>
                            <img src="<%= user.profile_pic_url %>" class="rounded-circle me-2" width="25" height="25">
                        <% } else { %>
                            <i class="fas fa-user-circle me-2"></i>
                        <% } %>
                        @<%= username %>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="#" onclick="showUserInfo()">
                            <i class="fas fa-info-circle"></i> Minhas Informações
                        </a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="#" onclick="logout()">
                            <i class="fas fa-sign-out-alt"></i> Logout
                        </a></li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>

    <div class="container-fluid mt-4">
        <div class="row">
            <!-- Sidebar com conversas -->
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        <h5><i class="fas fa-comments"></i> Conversas Recentes</h5>
                    </div>
                    <div class="card-body p-0" style="max-height: 400px; overflow-y: auto;">
                        <% if (conversations && conversations.length > 0) { %>
                            <% conversations.forEach(function(conv) { %>
                                <% if (conv.thread_id && conv.thread_id !== 'undefined' && conv.thread_id !== 'null') { %>
                                <div class="conversation-item p-3 border-bottom" 
                                     onclick="selectConversation('<%= conv.thread_id %>', '<%= conv.participants.map(p => p.username).join(', ') || 'Desconhecido' %>')"
                                     data-thread-id="<%= conv.thread_id %>">
                                    <div class="d-flex align-items-center">
                                        <% if (conv.participants[0] && conv.participants[0].profile_pic_url) { %>
                                            <img src="<%= conv.participants[0].profile_pic_url %>" 
                                                 class="rounded-circle me-3" width="40" height="40">
                                        <% } else { %>
                                            <div class="bg-secondary rounded-circle me-3 d-flex align-items-center justify-content-center" 
                                                 style="width: 40px; height: 40px;">
                                                <i class="fas fa-user text-white"></i>
                                            </div>
                                        <% } %>
                                        <div class="flex-grow-1">
                                            <h6 class="mb-1"><%= conv.participants.map(p => p.username).join(', ') %></h6>
                                            <p class="mb-1 text-muted small"><%= conv.last_message %></p>
                                            <small class="text-muted"><%= conv.formatted_time %></small>
                                        </div>
                                    </div>
                                </div>
                                <% } %>
                            <% }); %>
                        <% } else { %>
                            <div class="p-4 text-center text-muted">
                                <i class="fas fa-inbox fa-2x mb-3"></i>
                                <p>Nenhuma conversa encontrada</p>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>

            <!-- Área principal -->
            <div class="col-md-8">
                <!-- Enviar mensagem para usuário -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5><i class="fas fa-paper-plane"></i> Enviar Mensagem</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Buscar Usuário:</label>
                                    <div class="input-group">
                                        <input type="text" class="form-control" id="searchUsername" 
                                               placeholder="Digite o username (sem @)">
                                        <button class="btn btn-outline-secondary" onclick="searchUser()">
                                            <i class="fas fa-search"></i>
                                        </button>
                                    </div>
                                </div>
                                <div id="userSearchResult" class="mb-3"></div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Ou usar Thread ID:</label>
                                    <input type="text" class="form-control" id="threadId" 
                                           placeholder="Thread ID da conversa">
                                </div>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label">Mensagem:</label>
                            <textarea class="form-control" id="messageText" rows="3" 
                                      placeholder="Digite sua mensagem aqui..."></textarea>
                        </div>
                        
                        <div class="d-flex gap-2">
                            <button class="btn btn-primary" onclick="sendMessageToUser()">
                                <i class="fas fa-user"></i> Enviar para Usuário
                            </button>
                            <button class="btn btn-success" onclick="sendMessageToThread()">
                                <i class="fas fa-comments"></i> Enviar para Thread
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Área de mensagens -->
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 id="conversationTitle"><i class="fas fa-comment-dots"></i> Selecione uma conversa</h5>
                        <button class="btn btn-sm btn-outline-primary" id="refreshMessages" 
                                onclick="refreshCurrentConversation()" style="display: none;">
                            <i class="fas fa-sync-alt"></i> Atualizar
                        </button>
                    </div>
                    <div class="card-body" id="messagesArea" style="height: 400px; overflow-y: auto;">
                        <div class="text-center text-muted">
                            <i class="fas fa-comment-slash fa-3x mb-3"></i>
                            <p>Selecione uma conversa para ver as mensagens</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal de informações do usuário -->
    <div class="modal fade" id="userInfoModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Informações do Usuário</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body" id="userInfoContent">
                    <% if (user) { %>
                        <div class="text-center mb-4">
                            <% if (user.profile_pic_url) { %>
                                <img src="<%= user.profile_pic_url %>" class="rounded-circle mb-3" width="80" height="80">
                            <% } %>
                            <h5><%= user.full_name %></h5>
                            <p class="text-muted">@<%= user.username %></p>
                        </div>
                        <div class="row text-center">
                            <div class="col-4">
                                <h6><%= user.media_count %></h6>
                                <small class="text-muted">Posts</small>
                            </div>
                            <div class="col-4">
                                <h6><%= user.follower_count %></h6>
                                <small class="text-muted">Seguidores</small>
                            </div>
                            <div class="col-4">
                                <h6><%= user.following_count %></h6>
                                <small class="text-muted">Seguindo</small>
                            </div>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <!-- Loading overlay -->
    <div id="loadingOverlay" class="loading-overlay" style="display: none;">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Carregando...</span>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/dashboard.js"></script>
</body>
</html>

